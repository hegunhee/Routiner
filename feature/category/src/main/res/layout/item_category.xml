<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="actionHandler"
            type="com.hegunhee.category.CategoryActionHandler" />

        <variable
            name="category"
            type="com.example.domain.model.Category" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/round_shape_20dp"
        android:backgroundTint="@color/teal_200"
        android:minWidth="48dp"
        android:onClick="@{() -> actionHandler.onClickCategory(category.name,category.isSelected)}">

        <ImageView
            android:id="@+id/select_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:onClick="@{() -> actionHandler.onClickCategory(category.name,category.isSelected)}"
            android:src="@drawable/ic_check_circle_24"
            android:visibility="@{category.selected ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:inputType="text"
            android:minWidth="48dp"
            android:onClick="@{() -> actionHandler.onClickCategory(category.name,category.isSelected)}"
            android:text="@{category.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/category_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/select_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="영어공부" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
